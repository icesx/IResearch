package cn.xportal.java.base.concurrent.step;

class State implements Runnable {
	private Counter size;
	private Object finished;

	State(ConcurrentStep concurrentStep, Counter counter, Object finished) {
		this.size = counter;
		this.finished = finished;
	}

	public void run() {
		synchronized (size) {
			while (size.notFull()) {
				try {
					size.wait();
				} catch (InterruptedException e) {
					ConcurrentStep.logger.error(e, e);
				}
			}
		}
		synchronized (finished) {
			finished.notifyAll();
		}
	}

}